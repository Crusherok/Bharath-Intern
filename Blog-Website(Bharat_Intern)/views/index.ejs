<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Forum Personal Project</title>
    <link rel="stylesheet" href="styles/index.css" />
  </head>

  <body>
    <div class="container">
      <h1>Start a blog</h1>
      <form class="blog-post-form" action="/submit-post" method="post">
        <section>
          <label for="post-title">Title</label>
          <input type="text" name="post-title" />
        </section>

        <section>
          <label for="post-content">Content</label>
          <textarea name="post-content" placeholder="Text Here.."></textarea>
        </section>

        <button type="submit">Submit</button>
      </form>

      <div class="blog-posts-container">
        <% if (locals.posts && posts.length > 0) { %> <% posts.forEach((post) =>
        { %>
       <center> <h1>BLOGS</h1></center>
        <div class="post-container">
          <section class="post-middle">
            <h3>Title:</h3>
            <p><%= post.title %></p>
          </section>
          <section class="post-bottom">
            <h3>Content:</h3>
            <p><%= post.content %></p>
          </section>

          <!-- Add delete button -->
          <form class="post-delete-form" action="/delete-post" method="post">
            <input
              type="hidden"
              name="post-to-delete"
              value="<%= post._id %>"
            />
            <button type="submit">Delete</button>
          </form>
        </div>

        <% }); %> <% } else { %>

        <p>Currently No Posts to show...</p>

        <% } %>
      </div>
    </div>
  </body>
</html>
